* {
    font: 0.5em;
    background: #242424; /* was #191919 */
    background-color: #242424; /* was #191919 */
    color: #F0F0F0; /* was #DDDDDD */
    border: solid #242424; /* was #191919 */
    padding: 0px;
    margin: 0px;
}

QToolBar::handle {
    spacing: 1px; /* spacing between items in the tool bar */
}

QToolTip {
    border: 1px solid black;
    background-color: #ffa02f;
    color: #000000;
    border-radius: 3px;
    opacity: 100;
}

/* Slightly lighten the default QWidget background and text */
QWidget {
    color: #c0c0c0; /* was #aeaeae */
    background-color: #45484b; /* was #393c3e */
}

QWidget:item:hover {
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #ffa02f,
        stop: 1 #ca0619
    );
    color: #000000;
}

QWidget:item:selected {
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #ffa02f,
        stop: 1 #d7801a
    );
}

QMenuBar::item {
    background: #484b4d; /* was #3c3f41 */
}

QMenuBar::item:selected {
    background: transparent;
    border: 1px solid #ffaa00;
}

QMenuBar::item:pressed {
    border: 1px solid #303334;
    margin-bottom: -1px;
    padding-bottom: 1px;
}

QMenu {
    border: 1px solid #000;
}

QMenu::item {
    padding: 2px 20px 2px 20px;
}

QMenu::item:selected {
    color: #000000;
}

QWidget:disabled {
    color: #888888;
    background-color: #3a3a3a; /* was #323232 */
}

/* Backgrounds in item views slightly lighter */
QAbstractItemView {
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #5f5f5f,   /* was #4d4d4d */
        stop: 0.1 #777777,/* was #646464 */
        stop: 1 #707070   /* was #5d5d5d */
    );
}

