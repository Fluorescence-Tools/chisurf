QTextEdit:focus {
    border: 1px solid QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #ffa02f,
        stop: 1 #d7801a
    );
}

QScrollBar:horizontal {
    border: 1px solid #2c2c2c; /* was #222222 */
    background: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0.0 #1e1e1e, /* was #121212 */
        stop: 0.2 #353535,/* was #282828 */
        stop: 1 #575757   /* was #484848 */
    );
    height: 8px;
    margin: 0px 16px 0 16px;
}

QScrollBar::handle:horizontal {
    background: QLinearGradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0 #ffa02f,
        stop: 0.5 #d7801a,
        stop: 1 #ffa02f
    );
    border-radius: 4px;
}

QScrollBar::add-line:horizontal {
    border: 1px solid #262624; /* was #1b1b19 */
    border-radius: 2px;
    background: QLinearGradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0 #ffa02f,
        stop: 1 #d7801a
    );
    width: 14px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal {
    border: 1px solid #262624; /* was #1b1b19 */
    border-radius: 2px;
    background: QLinearGradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0 #ffa02f,
        stop: 1 #d7801a
    );
    width: 14px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}

QScrollBar::right-arrow:horizontal,
QScrollBar::left-arrow:horizontal {
    border: 1px solid black;
    width: 2px;
    height: 2px;
    background: white;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

QScrollBar:vertical {
    background: QLinearGradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0.0 #1e1e1e, /* was #121212 */
        stop: 0.2 #353535,/* was #282828 */
        stop: 1 #575757   /* was #484848 */
    );
    width: 8px;
    margin: 16px 0 16px 0;
    border: 1px solid #2c2c2c; /* was #222222 */
}

QScrollBar::handle:vertical {
    background: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #ffa02f,
        stop: 0.5 #d7801a,
        stop: 1 #ffa02f
    );
    min-height: 20px;
    border-radius: 2px;
}

QScrollBar::add-line:vertical {
    border: 1px solid #262624; /* was #1b1b19 */
    border-radius: 2px;
    background: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #ffa02f,
        stop: 1 #d7801a
    );
    height: 14px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical {
    border: 1px solid #262624; /* was #1b1b19 */
    border-radius: 2px;
    background: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #d7801a,
        stop: 1 #ffa02f
    );
    height: 14px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical {
    border: 1px solid black;
    width: 1px;
    height: 1px;
    background: white;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

QPlainTextEdit,
QTextEdit {
    font-family: Menlo, Monaco, Consolas, monospace;
    background-color: #343434; /* was #2b2b2b */
    color: #f8e4d6;
    selection-background-color: #767662;
}

QHeaderView::section {
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #727272, /* was #616161 */
        stop: 0.5 #616161,/* was #505050 */
        stop: 0.6 #555555,/* was #434343 */
        stop: 1 #767676  /* was #656565 */
    );
    color: #f8e4d6;
    padding-left: 0px;
    border: 1px solid #7c7c7c; /* was #6c6c6c */
    height: 16px;
}

QCheckBox,
QRadioButton {
    border: none;
}

QRadioButton::indicator,
QCheckBox::indicator {
    width: 10px;
    height: 10px;
}

QRadioButton::indicator::unchecked,
QCheckBox::indicator::unchecked {
    border: 1px solid #666666; /* was #5A5A5A */
}

QRadioButton::indicator:unchecked:hover,
QCheckBox::indicator:unchecked:hover {
    border: 1px solid #DDDDDD;
}

QRadioButton::indicator::checked,
QCheckBox::indicator::checked {
    border: 1px solid #666666; /* was #5A5A5A */
    background: #a37520; /* was #946512 */
}

QRadioButton::indicator:checked:hover,
QCheckBox::indicator:checked:hover {
    border: 1px solid #DDDDDD;
    background: #DDDDDD;
}

QRadioButton::indicator::indeterminate,
QCheckBox::indicator::indeterminate {
    border: 1px solid #913c1e; /* was #7f290b */
    background: none;
}

QRadioButton::indicator:indeterminate:hover,
QCheckBox::indicator:indeterminate:hover {
    border: 1px solid #DDDDDD;
}

/* Slightly brighten QDockWidget backgrounds */
QDockWidget {
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #3a3c3f, /* was #313335 */
        stop: 0.5 #46494d, /* was #3c3f41 */
        stop: 1 #3a3c3f  /* was #313335 */
    );
}

QDockWidget::title {
    text-align: center;
    spacing: 5px;
    color: #ff9e28;
}

QDockWidget::close-button,
QDockWidget::float-button {
    text-align: center;
    spacing: 1px;
}

QDockWidget::close-button:hover,
QDockWidget::float-button:hover {
    background: #303030; /* was #242424 */
}

QDockWidget::close-button:pressed,
QDockWidget::float-button:pressed {
    padding: 1px -1px -1px 1px;
}

QDockWidget::title {
    font: bold;
    text-align: center;
    background: #2e2e2e; /* was #282828 */
}

QMainWindow::separator {
    color: white;
    padding-left: 4px;
    border: 1px solid #5c5c5c; /* was #4c4c4c */
    spacing: 3px;
    background: #1d1d1d; /* was #141414 */
}

QMainWindow::separator:hover {
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #d7801a,
        stop: 0.5 #b56c17,
        stop: 1 #ffa02f
    );
    color: white;
    padding-left: 4px;
    border: 1px solid #7c7c7c; /* was #6c6c6c */
    spacing: 3px;
}

QMenu::separator {
    height: 2px;
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #262626, /* was #161616 */
        stop: 0.5 #2b2b2b, /* was #151515 */
        stop: 0.6 #3a3a3a, /* was #212121 */
        stop: 1 #474747  /* was #343434 */
    );
    color: white;
    padding-left: 4px;
    margin-left: 10px;
    margin-right: 5px;
}

/* ProgressBar kept basically the same with a bit lighter border. */
QProgressBar {
    border: 2px solid #4c4c4c;
    border-radius: 10px;
    text-align: center;
    padding-left: 4px;
    padding-right: 4px;
}

QProgressBar::chunk {
    background-color: #d7801a;
    width: 1.0px;
    margin: 1.0px;
}

/* Tabs are only slightly brighter on the background. */
QTabBar::tab {
    color: #b1b1b1;
    border: 1px solid #444;
    border-bottom-style: none;
    background-color: #3a3a3a; /* was #323232 */
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 3px;
    padding-bottom: 2px;
    margin-right: -1px;
}

QTabWidget::pane {
    border: 1px solid #444;
    top: 1px;
}

QTabBar::tab:last {
    margin-right: 0;
    border-top-right-radius: 3px;
}

QTabBar::tab:first:!selected {
    margin-left: 0px;
    border-top-left-radius: 3px;
}

QTabBar::tab:!selected {
    color: #b1b1b1;
    border-bottom-style: solid;
    margin-top: 3px;
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 1 #2a2a2a, /* was #212121 */
        stop: .4 #3f3f3f /* was #343434 */
    );
}

QTabBar::tab:selected {
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    margin-bottom: 0px;
    color: #fff1b1;
}

QTabBar::tab:!selected:hover {
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 1 #2a2a2a, /* was #212121 */
        stop: 0.4 #3f3f3f,/* was #343434 */
        stop: 0.2 #3f3f3f,
        stop: 0.1 #ffaa00
    );
}

QTreeView {
    alternate-background-color: #3e4245; /* was #383c3e */
    background-color: #3a3e40; /* was #333739 */
    margin: 0;
    padding: 0;
}

QMdiSubWindow {
    border: 2px solid #5a6b9a; /* was #495a8a */
    background: #303336; /* was #26292c */
}

