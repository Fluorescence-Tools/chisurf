QLineEdit {
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #5f5f5f,  /* was #4d4d4d */
        stop: 0 #777777,  /* was #646464 */
        stop: 1 #707070   /* was #5d5d5d */
    );
    padding: 0px;
    border-style: solid;
    border: 1px solid #2a2a2a; /* was #1e1e1e */
    border-radius: 3px;
    color: #e0e0e0; /* was #c3c3c3 */
}

QAbstractButton {
    color: #D7801A;
    background: #414141; /* was #353535 */
}

QAbstractButton:hover {
    color: #d72100;
}

QAbstractButton:pressed {
    color: #d72100;
    background: #666666; /* was #5A5A5A */
}

QPushButton {
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #6a6a6a,  /* was #565656 */
        stop: 0.1 #646464, /* was #525252 */
        stop: 0.5 #616161, /* was #4e4e4e */
        stop: 0.9 #5c5c5c, /* was #4a4a4a */
        stop: 1 #585858   /* was #464646 */
    );
    border-width: 1px;
    border-color: #2a2a2a; /* was #1e1e1e */
    border-style: solid;
    border-radius: 6px;
    padding: 3px;
    font: bold 0.5em;
    padding-left: 5px;
    padding-right: 5px;
}

QPushButton:pressed {
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #3a3a3a,  /* was #2d2d2d */
        stop: 0.1 #383838, /* was #2b2b2b */
        stop: 0.5 #363636, /* was #292929 */
        stop: 0.9 #343434, /* was #282828 */
        stop: 1 #303030   /* was #252525 */
    );
}

QPushButton:selected {
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #344963,
        stop: 0.1 #2b3d53,
        stop: 0.5 #293a4f,
        stop: 0.9 #28384d,
        stop: 1 #303030 /* was #252525 */
    );
    color: #37b158;
}

QComboBox {
    selection-background-color: #ffaa00;
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #6a6a6a,  /* was #565656 */
        stop: 0.1 #646464,/* was #525252 */
        stop: 0.5 #616161,/* was #4e4e4e */
        stop: 0.9 #5c5c5c,/* was #4a4a4a */
        stop: 1 #585858   /* was #464646 */
    );
    border-style: solid;
    border: 1px solid #2a2a2a; /* was #1e1e1e */
    border-radius: 2px;
}

/* SpinBox controls made slightly brighter. */
SpinBox {
    color: #37b158;
    font: bold 0.5em;
    border: 2px groove gray;
}

SpinBox::up-button {
    subcontrol-position: top right;
    width: 4px;
    height: 6px;
    background-color: #c600c6; /* was #b600b6 */
    border: 1px groove gray;
}

SpinBox::down-button {
    subcontrol-position: bottom right;
    width: 4px;
    height: 6px;
    background-color: #c600c6; /* was #B600B6 */
    border: 1px groove gray;
}

/* QSpinBox, QDoubleSpinBox similarly brightened */
QSpinBox {
    color: #37b158;
    font: bold 0.5em;
    border: 2px groove gray;
}

QSpinBox::up-button {
    subcontrol-position: top right;
    width: 4px;
    height: 6px;
    background-color: #c600c6; /* was #b600b6 */
    border: 1px groove gray;
}

QSpinBox::down-button {
    subcontrol-position: bottom right;
    width: 4px;
    height: 6px;
    background-color: #c600c6; /* was #B600B6 */
    border: 1px groove gray;
}

QDoubleSpinBox {
    color: #37b158;
    font: bold 0.5em;
    border: 2px groove gray;
}

QDoubleSpinBox::up-button {
    subcontrol-position: top right;
    width: 4px;
    height: 6px;
    background-color: #c600c6; /* was #b600b6 */
    border: 1px groove gray;
}

QDoubleSpinBox::down-button {
    subcontrol-position: bottom right;
    width: 4px;
    height: 6px;
    background-color: #c600c6; /* was #B600B6 */
    border: 1px groove gray;
}

/* Adjust hover border color */
QComboBox::down-arrow {
    image: url(:/icons/down_arrow.png);
}

QComboBox:hover,
QPushButton:hover {
    border: 2px solid QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #ffa02f,
        stop: 1 #d7801a
    );
}

QComboBox:on {
    padding-top: 3px;
    padding-left: 4px;
    background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #3a3a3a, /* was #2d2d2d */
        stop: 0.1 #383838, /* was #2b2b2b */
        stop: 0.5 #363636, /* was #292929 */
        stop: 0.9 #343434, /* was #282828 */
        stop: 1 #303030   /* was #252525 */
    );
    selection-background-color: #ffaa00;
}

QComboBox QAbstractItemView {
    border: 2px solid #555555;
    selection-background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #ffa02f,
        stop: 1 #d7801a
    );
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;
    border-left-width: 1px;
    border-left-color: darkgray;
    border-left-style: solid;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
}

/* GroupBox titles a bit brighter */
QGroupBox {
    margin-top: 18px;
}
QGroupBox::title {
    top: -14px;
    left: 0px;
    font: bold underline 10pt;
}
QGroupBox::indicator {
    width: 10px;
    height: 10px;
}
QGroupBox::indicator:unchecked {
    border: 1px solid #666666; /* was #5A5A5A */
}
QGroupBox::indicator:unchecked:hover {
    border: 1px solid #DDDDDD;
}
QGroupBox::indicator:checked {
    border: 1px solid #666666; /* was #5A5A5A */
    background: #a93b22; /* was #942d14 */
}

